@model IEnumerable<Skill>
@{
    ViewData["Title"] = "Index";
}



<br />
<br />


<div class="row m-2">
    <div class="col-4">
        <h3>قائمة المهارات</h3>
    </div>
    <div class="col-4">
        
    </div>
    <div class="col-4 text-center">
        <a asp-controller="Skills" asp-action="Create" type="button" class="btn btn-primary">إضافة مهارة</a>
    </div>
</div>
<br />
<table class="table table-light table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">إسم المهارة</th>
            <th scope="col">حالة التفعيل</th>
           <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                @if(item.IsActive == true)
                {
                    <td>مفعل</td>
                }
                else
                {
                    <td>غير مفعل</td>
                }
                
                <th>
                    <a class="btn btn-info" asp-action="Update" asp-route-Id=@item.Id>تعديل</a>
                </th>
               
            </tr>
        }
       
       
    </tbody>
</table>

